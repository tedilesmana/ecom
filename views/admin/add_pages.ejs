
   <%- include('../layout/adminheader') -%>



   <div class="row">
      <div class="col-md">
         <h2 class="page-title text-center">Add to Page</h2>
         <hr style=" width:170px; border-color: brown; ">
         <a href="/admin/pages" class="btn btn-primary">Back to all pages</a>
      </div>
   </div>
   <form action="/admin/pages/add-page" method="post">

      <div class="form-group">
         <label for="title">Title *</label>
         <input type="title" name="title" class="form-control" value="<%= title %>" id="title"
            placeholder="Silahkan isi Title">
      </div>
      <div class="form-group">
         <label for="link">Link *</label>
         <input type="link" name="link" class="form-control" placeholder="Silahkan isi Link"></div>
      <div class="form-group">
         <label for="content">Content *</label>
         <textarea name="content"  class="form-control" value="<%= content %>" cols="30" rows="10"
            placeholder="Silahkan isi Content"></textarea>
      </div>
      <button class="btn btn-info">Kirim</button>
   </form>
   <script>
      CKEDITOR.replace( 'content' );
</script>
   <%- include('../layout/adminfooter') -%>
